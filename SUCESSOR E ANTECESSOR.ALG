algoritmo "Sucessor e Antecessor"

var
n1,s,a : inteiro

inicio
// pedir ao usario para informar um numero
escreval("Informe um numero ")
leia (n1)

// calcular o sucessor e antecessor
s <- n1 + 1
a <- n1 -1

// mostra na tela o resultado
escreval("O sucessor do seu numero é " ,s )
escreval ("O antecessor do seu numero é " ,a)

fimalgoritmo